@page "/"
@inject IToastService ToastService
@inject AuthenticationStateProvider AuthStateProvider
@inject Services.IFlyoutService Flyout

<style>
	.carousel-item > img {
		height: 250px;
		width: 100%;
		object-fit: cover;
		margin: auto;
	}

	.carousel-caption {
		text-shadow: 0 0 4px black;
	}

	.carousel-control-prev svg,
	.carousel-control-next svg {
		font-size: 2.2rem;
	}

	.jumbotron {
		background-color: white;
		margin: 0;
		padding-bottom: 3rem;
	}

	#home-info {
		background-color: hsl(0, 0%, 10%);
		color: white;
		padding-top: 30px;
		padding-bottom: 20px;
	}

	@@media (min-width: 640px) {
		.carousel-item > img {
			height: 300px;
		}
	}

	@@media (min-width: 768px) {
		.carousel-item > img {
			height: 325px;
		}
	}

	@@media (min-width: 992px) {
		.carousel-item > img {
			height: 350px;
		}
	}

	@@media (min-width: 1200px) {
		.carousel-item > img {
			height: 400px;
		}
	}
</style>

<div>
	<div id="home-carousel" class="carousel slide" data-ride="carousel">
		<ol class="carousel-indicators">
			<li data-target="#home-carousel" data-slide-to="0" class="active"></li>
			<li data-target="#home-carousel" data-slide-to="1"></li>
			<li data-target="#home-carousel" data-slide-to="2"></li>
		</ol>
		<div class="carousel-inner">
			<div class="carousel-item active">
				<img src="./images/woman-sitting-in-front-of-door.jpg" alt="Woman sitting in front of door" class="d-block">
				<div class="carousel-caption d-block">
					<h1 style="font-weight: bold;">We're here to help</h1>
					<h4 style="font-weight: bold;">Find the help you deserve</h4>
				</div>
			</div>
			<div class="carousel-item">
				<img src="./images/soldiers-in-truck.jpg" alt="Soldiers in truck" class="d-block">
				<div class="carousel-caption d-block">
					<h1 style="font-weight: bold;">Make lifelong friends</h1>
					<h4 style="font-weight: bold;">Meet people just like yourself</h4>
				</div>
			</div>
			<div class="carousel-item">
				<img src="./images/friends.jpg" alt="Friends hugging" class="d-block">
				<div class="carousel-caption d-block">
					<h1 style="font-weight: bold;">Never Alone</h1>
					<h4 style="font-weight: bold;">We're always here for you</h4>
				</div>
			</div>
		</div>
		<a class="carousel-control-prev" href="#home-carousel" role="button" data-slide="prev">
			<i class="fa fa-angle-left" aria-hidden="true"></i>
			<span class="sr-only">Previous</span>
		</a>
		<a class="carousel-control-next" href="#home-carousel" role="button" data-slide="next">
			<i class="fa fa-angle-right" aria-hidden="true"></i>
			<span class="sr-only">Next</span>
		</a>
	</div>
</div>

<div class="jumbotron jumbotron-fluid">
	<div class="container text-center">
		<h1 style="font-weight: bold;">National Suicide Hotline</h1>
		<p class="lead"><a href="tel:1-800-273-8255" class="p22-link" style="font-size: 2rem;">1-800-273-8255</a></p>
		<p class="lead" style="font-size: 1.5rem;">Veterans press 1</p>
		<p class="lead">Or text <a href="sms:838255" class="p22-link">838255</a></p>
	</div>
</div>

<div id="home-info" class="container-fluid">
	<div class="container">
		<div class="row">
			<div class="col-12 col-md-4">
				<h3>What we do</h3>
				<p>
					On average, 22 veterans commit suicide every day. Prevent 22 Veterans is here to educate veterans,
					active military and the community on the struggles veterans face when transitioning out of the military.
					We want to bring the “22 a day” statistic down to 0.
				</p>

				<a href="/events" class="btn btn-danger">Find Events</a>
			</div>
			<div class="col-12 col-md-4">
				<h3>Who we are</h3>
				<p>
					We're a group of dedicated people who are motivated by a love for others to protect them from harm and find the help they need.
					Some of us have served our country but all of us have been affected by suicide. We understand how devastating it can
					be and we will stop at nothing to provide the highest level of help we can.
				</p>

				<a href="/about-us" class="btn btn-danger">About Us</a>
			</div>
			<div class="col-12 col-md-4">
				<h3>Support the cause</h3>
				<p>
					Donations are used to help with rent, food, gas, and anything else someone in crisis may need help with.
					None of the donations are kept for ourselves.
					If you only give once a month, please keep us in mind next time.
				</p>

				<form id="donate-btn" action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_blank">
					<input type="hidden" name="charset" value="utf-8" tabindex="0">
					<input type="hidden" name="cmd" value="_donations" tabindex="0">
					<input type="hidden" name="business" value="2ANUZNGPL64YG" tabindex="0">
					<input type="hidden" name="item_name" value="Support veterans in need" tabindex="0">
					<input type="hidden" name="currency_code" value="USD" tabindex="0">
					<input type="hidden" name="return" value="https://prevent22.com" tabindex="0">
					<input type="hidden" name="cancel_return" value="https://prevent22.com" tabindex="0">
					<input type="hidden" name="notify_url" value="https://www.prevent22.com/?wp_paypal_ipn=1" tabindex="0">
					<input type="hidden" name="bn" value="WPPayPal_Donate_WPS_US" tabindex="0">
					<button class="btn btn-danger" name="submit" onclick="$('#donate-btn')[0].requestSubmit()">Donate</button>
				</form>
			</div>
		</div>
	</div>
</div>
