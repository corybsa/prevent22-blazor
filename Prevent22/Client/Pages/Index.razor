@page "/"
@inject IToastService ToastService
@inject AuthenticationStateProvider AuthStateProvider
@inject Services.IFlyoutService Flyout

<style>
	.carousel-item > img {
		height: 300px;
		width: 100%;
		object-fit: cover;
		margin: auto;
	}

	.carousel-caption {
		text-shadow: 0 0 4px black;
	}

	.carousel-control-prev svg,
	.carousel-control-next svg {
		font-size: 2.2rem;
	}

	.jumbotron {
		background-color: white;
		margin: 0;
		padding-bottom: 3rem;
	}

	#home-info {
		background-color: hsl(0, 0%, 10%);
		color: white;
		padding-top: 30px;
		padding-bottom: 20px;
	}
</style>

<div>
	<div id="home-carousel" class="carousel slide" data-ride="carousel">
		<ol class="carousel-indicators">
			<li data-target="#home-carousel" data-slide-to="0" class="active"></li>
			<li data-target="#home-carousel" data-slide-to="1"></li>
			<li data-target="#home-carousel" data-slide-to="2"></li>
		</ol>
		<div class="carousel-inner">
			<div class="carousel-item active">
				<img src="./images/woman-sitting-in-front-of-door.jpg" alt="Woman sitting in front of door" class="d-block">
				<div class="carousel-caption d-block">
					<h1>We're here to help</h1>
					<h5>Find the help you deserve</h5>
				</div>
			</div>
			<div class="carousel-item">
				<img src="./images/soldiers-in-truck.jpg" alt="Soldiers in truck" class="d-block">
				<div class="carousel-caption d-block">
					<h1>Make lifelong friends</h1>
					<h5>Meet people just like yourself</h5>
				</div>
			</div>
			<div class="carousel-item">
				<img src="./images/friends.jpg" alt="Friends hugging" class="d-block">
				<div class="carousel-caption d-block">
					<h1>Never Alone</h1>
					<h5>We're always here for you</h5>
				</div>
			</div>
		</div>
		<a class="carousel-control-prev" href="#home-carousel" role="button" data-slide="prev">
			<i class="fa fa-angle-left" aria-hidden="true"></i>
			<span class="sr-only">Previous</span>
		</a>
		<a class="carousel-control-next" href="#home-carousel" role="button" data-slide="next">
			<i class="fa fa-angle-right" aria-hidden="true"></i>
			<span class="sr-only">Next</span>
		</a>
	</div>
</div>

<div class="jumbotron jumbotron-fluid">
	<div class="container text-center">
		<h1 class="display-5" style="font-weight: bold;">Veteran's Crisis Line</h1>
		<p class="lead"><a href="tel:1-800-273-8255" class="p22-link">1-800-273-8255</a></p>
		<p class="lead">Then press 1</p>
	</div>
</div>

<div id="home-info" class="container-fluid">
	<div class="container">
		<div class="row">
			<div class="col-4">
				<h3>What we do</h3>
				<p>Prevent 22 Veterans is here to educate veterans, active military and the community on the struggles veterans face when transitioning out of the military. We want to bring the “22 a day” statistic down to 0.</p>
			</div>
			<div class="col-4">
				<h3>Who we are</h3>
				<p>We”re regular people who are motivated by a love for others to protect them from harm and find the help they need. Some of us have served our country but all of us have been affected by suicide. We understand how devastating it can be and we will stop at nothing to provide the highest level of help we can.</p>
			</div>
			<div class="col-4">
				<h3>Support the cause</h3>
				<p>Directly help veterans by donating to our cause and letting us handle the hard part! All donations go back into the community. We keep none of the the donations for ourselves. We use the donations to help with rent, food, gas, and anything else someone may need help with.</p>
			</div>
		</div>
	</div>
</div>
